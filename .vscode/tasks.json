{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "make all",
            "command": "make",
            "args": ["-j4", "all"],
            "options": {
              "cwd": "${workspaceRoot}/fline/app/armgcc/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "make",
            "args": ["clean"],
            "options": {
              "cwd": "${workspaceRoot}/fline/app/armgcc/"
            },
            "group": "none"
        },

    ]
}
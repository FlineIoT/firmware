{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "app compile",
            "command": "make",
            "args": ["-j8", "all"],
            "options": {
              "cwd": "${workspaceRoot}/fline/app/armgcc/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "app flash",
            "command": "make",
            "args": ["flash"],
            "options": {
              "cwd": "${workspaceRoot}/fline/app/armgcc/"
            },
            "group": "none"
        },
        {
            "type": "shell",
            "label": "app clean",
            "command": "make",
            "args": ["clean"],
            "options": {
              "cwd": "${workspaceRoot}/fline/app/armgcc/"
            },
            "group": "none"
        },
        {
          "type": "shell",
          "label": "bootloader compile",
          "command": "make",
          "args": ["-j8", "all"],
          "options": {
            "cwd": "${workspaceRoot}/fline/bootloader/armgcc/"
          },
          "group": "none"
      },
    ]
}